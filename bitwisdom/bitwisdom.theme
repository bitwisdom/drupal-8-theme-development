function bitwisdom_preprocess_node(&$variables) {
  $variables['user_node_count'] = \Drupal::entityTypeManager()
      ->getStorage('node')
      ->getQuery()
      ->condition('uid', $variables['node']->getOwnerId())
      ->count()
      ->execute();
}